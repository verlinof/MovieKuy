<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity"
    android:background="@color/primary"
    >

    <TextView
        android:id="@+id/tvSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Order Summary"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:clickable="true"
        android:src="@drawable/btn_back"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/btnBack"
        app:cardCornerRadius="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GreyHound"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvBioskop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambarukmo Plaza"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 oktober 2023"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Number"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvOrderNumberData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1198804794001625088"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvSeatData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Seat"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvPaymentData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Transfer (BNI)"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvSeatData2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Seat"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 35.000"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 2.500"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 37.500"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginHorizontal="15dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>